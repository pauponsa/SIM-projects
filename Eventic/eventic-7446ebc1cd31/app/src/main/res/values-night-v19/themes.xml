<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Eventic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/eventic_blue</item> <!-- purple_200 for dark mode -->
        <item name="colorPrimaryVariant">@color/eventic_light_blue</item>
        <item name="colorOnPrimary">#202125</item> <!-- dark for black mode -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/eventic_blue</item>
        <item name="colorSecondaryVariant">@color/eventic_light_blue
        </item> <!-- teal_200 for dark mode -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>